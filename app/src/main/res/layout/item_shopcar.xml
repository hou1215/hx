<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_center"
        android:layout_gravity="center_horizontal" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200px">

        <ImageView
            android:src="@mipmap/item"
            android:layout_marginLeft="82px"
            android:layout_centerVertical="true"
            android:id="@+id/img_goods"
            android:layout_width="160px"
            android:layout_height="160px" />

        <TextView
            android:textSize="30px"
            android:textColor="@color/color_text"
            android:id="@id/goods_title"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/img_goods"
            android:layout_marginTop="25px"
            android:text="糖醋鱼鸡蛋饭"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_price"
            android:layout_below="@id/goods_title"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/img_goods"
            android:layout_marginTop="25px"
            android:text="¥8.78"
            android:textSize="28px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="54px"
            layout="@layout/btn_addorminu"/>


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:background="@mipmap/x"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>