<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/tab_title"/>


    <RelativeLayout
        android:background="@color/color_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content"
            android:background="@drawable/tv_style"
            android:layout_marginTop="25px"
            android:layout_centerHorizontal="true"
            android:layout_width="670px"
            android:layout_height="230px">


            <RelativeLayout
                android:layout_marginTop="40px"
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:textColor="@color/color_text"
                    android:layout_marginLeft="96px"
                    android:textSize="32px"
                    android:text="张惠妹"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@id/name"
                    android:id="@+id/phone"
                    android:textColor="@color/color_text"
                    android:layout_marginLeft="30px"
                    android:textSize="32px"
                    android:text="18697925677"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@id/name"
                    android:layout_alignLeft="@id/name"
                    android:id="@+id/address"
                    android:layout_marginTop="20px"
                    android:textColor="@color/color_text"
                    android:textSize="26px"
                    android:text="南宁市西乡塘区台湾街19栋"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_marginLeft="96px"
                android:id="@+id/line01"
                android:layout_marginTop="20px"
                android:layout_marginRight="56px"
                android:layout_below="@id/rl_address"
                android:background="@mipmap/x"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


            <RelativeLayout
                android:id="@+id/rl_send_time"
                android:layout_below="@id/line01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/text03"
                    android:layout_marginTop="25px"
                    android:textColor="@color/color_text"
                    android:layout_marginLeft="96px"
                    android:textSize="32px"
                    android:text="送货时间："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_select_time"
                    android:layout_marginTop="25px"
                    android:textColor="@color/color_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="72px"
                    android:textSize="32px"
                    android:text="尽快送达"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>



        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_below="@id/content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:background="@mipmap/orders_line_bg"
            android:layout_width="match_parent"
            android:layout_height="2px"/>


        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_below="@id/line"
            android:background="@drawable/tv_style"
            android:layout_centerHorizontal="true"
            android:layout_width="670px"
            android:layout_height="400px">

            <TextView
                android:id="@+id/text1"
                android:layout_marginTop="32px"
                android:layout_marginLeft="96px"
                android:textSize="28px"
                android:text="商品及优惠信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line1"
                android:layout_alignLeft="@id/text1"
                android:layout_marginTop="6px"
                android:layout_marginRight="56px"
                android:layout_below="@id/text1"
                android:background="@mipmap/x"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl_remar"
            android:layout_marginTop="1px"
            android:layout_below="@id/rl_detail"
            android:background="@drawable/tv_style"
            android:layout_centerHorizontal="true"
            android:layout_width="670px"
            android:layout_height="155px">

            <TextView
                android:id="@+id/text"
                android:layout_marginTop="32px"
                android:layout_marginLeft="96px"
                android:textSize="28px"
                android:text="订单备注："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text05"
                android:layout_marginTop="32px"
                android:textSize="28px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60px"
                android:text="备注您需要的服务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <TextView
            android:background="@drawable/btn_style_r"
            android:id="@+id/action"
            android:textColor="@color/white"
            android:textSize="40px"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="25px"
            android:text="支付订单"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:layout_width="555px"
            android:layout_height="100px" />

    </RelativeLayout>

</LinearLayout>
