<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/tab_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/tv_style"
            android:layout_margin="20px"
            android:layout_width="match_parent"
            android:layout_height="720px">
            
            <EditText
                android:id="@+id/et_name"
                android:background="@null"
                android:textSize="30px"
                android:hint="联系人"
                android:layout_marginTop="45px"
                android:layout_marginLeft="45px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="16px"
                android:background="@color/theme"
                android:layout_below="@id/et_name"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:id="@+id/m"
                android:layout_marginTop="30px"
                android:layout_marginLeft="240px"
                android:textSize="20px"
                android:layout_below="@id/line"
                android:text="先生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignBottom="@id/m"
                android:layout_toRightOf="@id/m"
                android:layout_marginLeft="120px"
                android:id="@+id/w"
                android:textSize="20px"
                android:text="女士"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_below="@id/line"
                android:layout_marginTop="110px"
                android:id="@+id/et_phone"
                android:background="@null"
                android:textSize="30px"
                android:hint="联系电话"
                android:layout_marginLeft="45px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line1"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="16px"
                android:background="@color/theme"
                android:layout_below="@id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <EditText
                android:layout_below="@id/line1"
                android:layout_marginTop="45px"
                android:id="@+id/et_address"
                android:background="@null"
                android:textSize="30px"
                android:hint="小区/写字楼"
                android:layout_marginLeft="45px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line2"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="16px"
                android:background="@color/theme"
                android:layout_below="@id/et_address"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <EditText
                android:layout_below="@id/line2"
                android:layout_marginTop="45px"
                android:id="@+id/et_room"
                android:background="@null"
                android:textSize="30px"
                android:hint="楼号/门牌号"
                android:layout_marginLeft="45px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line3"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="16px"
                android:background="@color/theme"
                android:layout_below="@id/et_room"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


            <TextView
                android:layout_below="@id/line3"
                android:layout_marginTop="56px"
                android:gravity="center"
                android:background="@drawable/btn_style_g"
                android:textColor="@color/white"
                android:textSize="38px"
                android:layout_centerHorizontal="true"
                android:text="添加收货地址"
                android:layout_width="560px"
                android:layout_height="96px" />

            
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
