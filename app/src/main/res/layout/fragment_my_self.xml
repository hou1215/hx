<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/x"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360px"
                android:background="@color/theme">

                <com.youmi.tt.view.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="70px"
                    android:layout_marginLeft="50px"
                    android:src="@mipmap/item" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27px"
                    android:layout_toRightOf="@id/img_user"
                    android:text="点击设置昵称"
                    android:textColor="@color/white"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@id/img_user"
                    android:text="15978134239"
                    android:textColor="@color/white"
                    android:textSize="20px" />

                <View
                    android:id="@+id/line"
                    android:layout_width="1px"
                    android:layout_height="80px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="125px"
                    android:layout_marginLeft="245px"
                    android:layout_toRightOf="@id/img_user"
                    android:background="@color/line" />


                <TextView
                    android:id="@+id/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/line"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/line"
                    android:text="新的通知"
                    android:textColor="#ffea00" />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="37px"
                    android:layout_above="@id/news"
                    android:layout_marginBottom="12px"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/line"
                    android:background="@mipmap/ic_launcher" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="215px"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="78px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80px"
                        android:text="我的订单"
                        android:textSize="24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="57px"
                        android:text="查看全部订单"
                        android:textSize="24px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="60px"
                        android:background="@mipmap/orders_line_bg" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/order"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_unpay"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <com.youmi.tt.view.CircleImageView
                            android:id="@+id/unpay"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/unpay"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10px"
                            android:text="待付款"
                            android:textSize="22px" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40px"
                        android:layout_marginTop="40px"
                        android:background="@mipmap/x" />

                    <RelativeLayout
                        android:id="@+id/rl_uncheck"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <com.youmi.tt.view.CircleImageView
                            android:id="@+id/to_be_confir"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/to_be_confir"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10px"
                            android:text="待确认"
                            android:textSize="22px" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40px"
                        android:layout_marginTop="40px"
                        android:background="@mipmap/x" />

                    <RelativeLayout
                        android:id="@+id/rl_done"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <com.youmi.tt.view.CircleImageView
                            android:id="@+id/done"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/done"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10px"
                            android:text="已结束"
                            android:textSize="22px" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px" />

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80px"
                    android:text="收货地址" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@mipmap/x" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80px"
                    android:text="通知中心" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80px"
                    android:text="联系客服" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@mipmap/x" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80px"
                    android:text="意见反馈" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@mipmap/x" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80px"
                    android:text="商家合作" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@mipmap/x" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80px"
                    android:text="系统设置" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/x" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>
