<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/theme"
        android:layout_width="match_parent"
        android:layout_height="145px">

        <TextView
            android:textColor="@color/white"
            android:textSize="38px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26px"
            android:text="新用户首单1元购"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:background="@color/color_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content"
            android:background="@drawable/tv_style"
            android:layout_marginTop="25px"
            android:layout_centerHorizontal="true"
            android:layout_width="670px"
            android:layout_height="605px">


            <TextView
                android:id="@+id/tip"
                android:layout_marginTop="40px"
                android:textColor="@color/theme"
                android:layout_centerHorizontal="true"
                android:textSize="30px"
                android:text="请对下列商品中的1件使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line01"
                android:layout_marginTop="34px"
                android:layout_marginLeft="56px"
                android:layout_marginRight="56px"
                android:layout_below="@id/tip"
                android:background="@mipmap/x"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


            <RelativeLayout
                android:layout_marginBottom="34px"
                android:layout_marginTop="34px"
                android:layout_below="@id/line01"
                android:layout_marginLeft="56px"
                android:layout_marginRight="56px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:divider="@null"
                    android:scrollbars="none"
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </RelativeLayout>

        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_below="@id/content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:background="@mipmap/orders_line_bg"
            android:layout_width="match_parent"
            android:layout_height="2px"/>

        <RelativeLayout
            android:layout_below="@id/line"
            android:background="@drawable/tv_style"
            android:layout_centerHorizontal="true"
            android:layout_width="670px"
            android:layout_height="165px">

            <TextView
                android:id="@+id/text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="54px"
                android:textColor="@color/theme"
                android:textSize="28px"
                android:text="合计"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text01"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text"
                android:layout_marginLeft="5px"
                android:textColor="@color/color_price"
                android:textSize="28px"
                android:text="¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/totle"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text01"
                android:layout_marginLeft="5px"
                android:textColor="@color/color_price"
                android:textSize="40px"
                android:text="36.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="295px"
                android:textColor="@color/theme"
                android:textSize="28px"
                android:text="已优惠"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text" />

            <TextView
                android:id="@+id/text02"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text1"
                android:layout_marginLeft="5px"
                android:textColor="@color/color_price"
                android:textSize="28px"
                android:text="¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/privilege"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text02"
                android:layout_marginLeft="5px"
                android:textColor="@color/color_price"
                android:textSize="40px"
                android:text="14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:background="@drawable/btn_style_r"
            android:id="@+id/action"
            android:textColor="@color/white"
            android:textSize="40px"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="25px"
            android:text="去结算"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50px"
            android:layout_width="555px"
            android:layout_height="100px" />

    </RelativeLayout>

</LinearLayout>
