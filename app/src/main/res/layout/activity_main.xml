<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5">

    <LinearLayout
        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/bg_home_home" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px"
                android:text="首页"
                android:textColor="@drawable/tc_main_home"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_store"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/bg_home_around" />

            <TextView
                android:id="@+id/tv_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px"
                android:text="商品分类"
                android:textColor="@drawable/tc_main_home"
                android:textSize="24px" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_shopcart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab">


            <LinearLayout
                android:id="@+id/ll_shopcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_shopcart"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/bg_home_shopcart" />

                <TextView
                    android:id="@+id/tv_shopcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4px"
                    android:text="购物车"
                    android:textColor="@drawable/tc_main_home"
                    android:textSize="24px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_shopcart_num"
                android:layout_width="wrap_content"
                android:layout_height="24px"
                android:layout_above="@id/ll_shopcart"
                android:layout_marginBottom="-20px"
                android:layout_marginLeft="-25px"
                android:layout_toRightOf="@id/ll_shopcart"
                android:background="@drawable/bg_tv_num"
                android:gravity="center"
                android:minWidth="24px"
                android:paddingLeft="6px"
                android:paddingRight="6px"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textSize="16px"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_myself"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_myself"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/bg_home_myself" />

            <TextView
                android:id="@+id/tv_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px"
                android:text="我的"
                android:textColor="@drawable/tc_main_home"
                android:textSize="24px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/ll_tabs"
        android:background="#c3c3c3" />

    <RelativeLayout
        android:id="@+id/rl_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_line"/>

</RelativeLayout>